{
    "name": "nos-notion-os",
    "version": "1.0.0",
    "description": "Notion Operating System - TypeScript implementation",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/index.ts",
        "deploy": "tsx src/core/deploy.ts",
        "sync:canvas": "tsx src/sync/canvas.ts",
        "lint": "eslint src --ext .ts",
        "type-check": "tsc -p tsconfig.check.json",
        "validate:manifest": "tsx scripts/validate-manifest.ts",
        "backup:notion": "tsx scripts/backup-notion.ts",
        "test": "vitest run"
    },
    "keywords": [
        "notion",
        "automation",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@notionhq/client": "^2.2.15",
        "axios": "^1.6.5",
        "commander": "^11.1.0",
        "dotenv": "^16.3.1",
        "yaml": "^2.3.4"
    },
    "devDependencies": {
        "@types/node": "^20.11.5",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "eslint": "^8.56.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vitest": "^1.1.3"
    }
}